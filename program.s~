@ __________________________________________________________________
@ ­­­­­­­­­­­­­­­­­­­­­­­­­­­OUR PROJECT­­­­­­­­­­­­­­­­­­­­­­­­­­
@ ­­­­­­­­­­­­­­­­­­­­­­­Waveform Generator­­­­­­­­­­­­­­­­­­­­­­­­
@___________________________________________________________________
.section .text
.global _start

.equ GPIO9_DIR, 0x5800F400 @ GPIO9_DIR register address
.equ GPIO9_DATA, 0x5800F3FC@ GPIO9_DATA register
.equ SCU_PCGR1, 0x5C002018 @ Peripheral clock gating register
.equ SCU_PRR1, 0x5C002020 @ Peripheral reset register
.equ num, 3 @ 0 ­ Sine
            @ 1 ­ Triangle
            @ 2 ­ Sawtooth
            @ 3 ­ Square
_start:
	MOV r2, #num
	@ Choice of Waveform
	LDR r10, =SCU_PCGR1
	LDR r9, =0x00800000
	STR r9, [r10]
	LDR r10, =SCU_PRR1
	LDR r9, =0x00800000
	STR r9, [r10]
	LDR r10, =GPIO9_DIR
	LDR r9, =0xFFFFFFFF
	STR r9, [r10]

loop:
	MOV r1, #0
	ADR r4, JumpTable
	LDR r4,[r4,r2,LSL #2]

retvalue:
	MOV r3, #1000

delay:
	SUBS r3,r3,#1
	BNE delay
	LDRB r0,[r4,r1]
	CMP r0, #128
	BEQ loop
	LDR r10, =GPIO9_DATA
	STR r0, [r10]
	ADD r1, r1, #1
	B retvalue

@_____________________________
@­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­­_____________________________
